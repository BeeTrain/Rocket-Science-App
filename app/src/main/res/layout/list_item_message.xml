<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingStart="@dimen/default_elevation"
	android:paddingEnd="@dimen/default_elevation"
	android:paddingBottom="@dimen/default_elevation"
	android:gravity="center_vertical"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/ivAuthor"
		android:contentDescription="@string/content_description"
		android:layout_width="@dimen/chat_avatar_size"
		android:layout_height="@dimen/chat_avatar_size"
		android:layout_gravity="bottom"
		app:srcCompat="@drawable/ic_account"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/default_elevation"
		android:padding="@dimen/default_elevation"
		android:gravity="center_vertical"
		android:background="@color/white_1000"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tvMessage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"/>

		<ImageView
			android:id="@+id/ivMessage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:maxHeight="@dimen/chat_image_max_size"
			android:contentDescription="@string/content_description"
			android:background="@color/transparent"
			android:scaleType="fitCenter"/>

		<TextView
			android:id="@+id/tvAuthor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"/>
	</LinearLayout>

</LinearLayout>