<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextSmallBlack">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/black_1000</item>
    </style>

    <style name="TextMediumBlack">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/black_1000</item>
    </style>

    <style name="TextLargeBlack">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/black_1000</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/colorPrimaryDark</item>
        <item name="android:progressTint">@color/colorSecondary</item>
    </style>

    <style name="Widget.RocketScienceApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.RocketScienceApp.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">@dimen/default_elevation</item>
    </style>

    <style name="TextAppearance.RocketScienceApp.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.RocketScienceApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/anim_next_button_state_list</item>
    </style>

    <style name="Widget.RocketScienceApp.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.RocketScienceApp.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top_white</item>
    </style>

</resources>
